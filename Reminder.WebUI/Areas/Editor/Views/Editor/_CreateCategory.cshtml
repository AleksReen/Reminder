@model Reminder.WebUI.Areas.Editor.Models.ViewModelCreateCategory 

@{
    var options = new AjaxOptions { UpdateTargetId = "result", LoadingElementId = "loader" };
}

<div>
    <h3>
        Create Category
        <span id="loader" style="display:none">
            <img src="~/Content/loaders/loader-blue.png" />
        </span>
    </h3>
    <hr />
    @using (Ajax.BeginForm("CreateCategory", options))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label" })
                </div>

                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", @Value = ""})
                    @Html.ValidationMessageFor(model => model.CategoryName, null, new { @class = "text-danger" })
                </div>
            </div>

            <button class="btn btn-success" type="submit">Create</button>
            @Html.ActionLink("Close", "Index", "Editor", new { area = "Editor" }, new { @class = "btn btn-primary" })

        </div>

        if (Model != null&&!string.IsNullOrEmpty(Model.Message))
        {
            <div>@Model.Message</div>
        }
    }
</div>



