@model IEnumerable<Reminder.Common.Entity.UserReminder>

<div id="result">
    <h3>
        Users table
    </h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole.RoleName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRole.RoleName)
                </td>
                <td>
                    @Ajax.ActionLink("Edit", "EditeUser", "Admin", new { id = item.UserId }, new AjaxOptions { UpdateTargetId = "result" }) |
                    @Ajax.ActionLink("Delete", "DeleteUser", "Admin", item, new AjaxOptions { UpdateTargetId = "result" })
                </td>
            </tr>
        }

    </table>
</div>
