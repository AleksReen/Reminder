@model IEnumerable<Reminder.Common.Entity.UserReminder>

<div id="result">
    <h3>
        Users table
    </h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @foreach (var r in item.UserRole)
                    {
                        @r.RoleName
                    }
                </td>
                <td>
                    @Ajax.ActionLink("Edit", "EditeUser", "Admin", new { id = item.UserId }), new AjaxOptions { UpdateTargetId = "result" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                </td>
            </tr>
        }

    </table>
</div>
