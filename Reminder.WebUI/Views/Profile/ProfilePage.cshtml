@model Reminder.Common.Entity.UserReminder

@{
    ViewBag.Title = "ProfilePage";
    var options = new AjaxOptions { UpdateTargetId = "result", LoadingElementId = "loader" };
}
<div>
    <div class="col-md-4">
        <h2>Profile</h2>
        <div class="list-group list-unstyled">
            @Html.ActionLink("Select an action", "ProfilePage", "Profile", null, new { @class = "list-group-item active" })
            @Html.Raw(@Ajax.ActionLink("[replacetext]", "UserDetails", "Profile", options, new { @class = "list-group-item" }).ToHtmlString().Replace("[replacetext]", "<span class='glyphicon glyphicon-user'></span>  User details"))
            @Html.Raw(@Ajax.ActionLink("[replacetext]", "UpdateProfile", "Profile", options, new { @class = "list-group-item" }).ToHtmlString().Replace("[replacetext]", "<span class='glyphicon glyphicon-user'></span>  Сhange login and email"))
            @Html.Raw(@Ajax.ActionLink("[replacetext]", "SetPassword", "Profile", options, new { @class = "list-group-item" }).ToHtmlString().Replace("[replacetext]", "<span class='glyphicon glyphicon-refresh'></span>  Change password"))
        </div>

    </div>
    <div class="col-md-8">
        <div id="result">
            <h2>
                Description
                <span id="loader" style="display:none">
                    <img src="~/Content/loaders/loader-blue.gif" />
                </span>
            </h2>
            <p>
                In this section you can view and change your credentials, such as login and email, and change the password.
            </p>
        </div>
    </div>
</div>
