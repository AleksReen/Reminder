@model Reminder.WebUI.Models.ViewsModels.ViewDeleteReminder

@{
    var options = new AjaxOptions { UpdateTargetId = "result", LoadingElementId = "loader" };
}
    
<h3>
    Delete Reminder
    <span id="loader">
        <img src="~/Content/loaders/loader-blue.png" />
    </span>
</h3>   
<hr />   
<h4>
    <span class="glyphicon glyphicon-ok-circle" style="color:#5cb85c"></span>
    Are you sure you want to delete reminder <b>@Model.reminderTitle</b>?
</h4>
    
@Ajax.ActionLink("Delete", "СonfirmedDeleteReminder", "Reminder", new { id = Model.reminderId, returnUrl = ViewBag.Return }, options, new { @class = "btn btn-danger" })

@if (ViewBag.Return == null)
{
    @Ajax.ActionLink("Close", "ReminderList", "Reminder", options, new { @class = "btn btn-primary" });
}
else
{
    @Ajax.ActionLink("Close", null, null, options, new { @class = "btn btn-primary", href = ViewBag.Return });
}
